
export TERMINAL=alacritty
export EDITOR=nvim
export BROWSER=firefox
export PAGER=less

# XDG
export XDG_DATA_HOME=~/.local/share
export XDG_CONFIG_HOME=~/.config
export XDG_STATE_HOME=~/.local/state
export XDG_CACHE_HOME=~/.cache

# others
export FZF_DEFAULT_COMMAND="fd --type f --hidden --follow --exclude .git"
export FZF_DEFAULT_OPTS="--layout=reverse --inline-info"
export LESSHISTFILE=${XDG_CACHE_HOME}/less/history
export DOTDIR=${HOME}/.config
export XINITRC=${XDG_CONFIG_HOME}/rc/.xinitrc
export ZDOTDIR=${XDG_CONFIG_HOME}/zsh
export GTK2_RC_FILES=${XDG_CONFIG_HOME}/gtk-2.0/gtkrc
export HISTFILE=${XDG_STATE_HOME}/bash/history
export PASSWORD_STORE_DIR=${XDG_DATA_HOME}/.password-store
export GNUPGHOME=${XDG_DATA_HOME}/.gnupg
export XAUTHORITY=${XDG_DATA_HOME}/.Xauthority
export MBSYNCRC=${XDG_CONFIG_HOME}/myrc/mbsyncrc
export NOTMUCH_CONFIG=${XDG_CONFIG_HOME}/myrc/notmuch-config

# setting locale for dmenu
export LC_CTYPE=en_US.UTF-8
export LANG=en_US.UTF-8

# Rust stuff
export CARGO_INCREMENTAL=1
export RUST_BACKTRACE=1
export RUSTUP_HOME=${XDG_DATA_HOME}/rustup
export CARGO_HOME=${XDG_DATA_HOME}/cargo
export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/library"

# PATH
export PATH=${PATH}:${XDG_DATA_HOME}/cargo/bin
export PATH=${PATH}:${HOME}/.local/bin
export PATH=${PATH}:${XDG_CONFIG_HOME}/vifm/scripts

