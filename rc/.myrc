#
# ~/.myrc
#
export EDITOR=vim
export BROWSER=surf
export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/src"
export DOTDIR="~/.config"
export XDG_CONFIG_HOME="~/.config"
export PAGER=bat

TO=/run/media/rakshas/raw
export PATH=$TO/tools/jdk8/bin:$PATH
export PATH=$TO/tools/scala/bin:$PATH
export PATH=$TO/SmrutiPatra/tools/sbt/bin:$PATH
export PATH=$TO/tools/VSCode-linux-x64/bin/:$PATH
alias idea=$TO'/tools/idea/bin/idea.sh &'

alias po='poweroff'
alias scala='scala -Dscala.color'
alias yy='youtube-dl -c'
alias wk='wget -nc'
alias ww='wget -c'
alias ev='evince'
alias l='lsd -ltrAh'
alias mc='mc --nocolor'
alias f='l|grep -i'
alias tf='tree -fa | grep -i'
alias dok='sudo docker'
alias q='exit'
alias v='vifm'
alias www='w3m'
alias c='clear'
alias surf='tabbed surf -e &'
#alias ls='ls --color=auto'
alias ls='lsd'
alias la='lsd -a'
alias ll='ls --color -lh'
alias l='ls -ltrAh'
alias l.="lsd -A | egrep '^\.'"
alias lo='kill -9 -1'
alias rr='br'
alias rs='br --sizes'
alias rl='br -dp'
alias vim=nvim
alias vv='nvim $(sk -m)'
alias rs='nvim $(find . -name "*.rs" | sk -m)'

#vi mode
set -o vi

#ddgr
alias ddgr='ddgr -n 7'
alias wwd='BROWSER=w3m ddgr'

# save path on cd
function cd {
		builtin cd $@
				pwd > ~/.last_dir
}

alias pp='pwd > ~/.last_dir'
alias cds='cd `cat ~/.last_dir`'

# restore last saved path
#if [ -f ~/.last_dir ]
#    then cd `cat ~/.last_dir`
#fi


#------------------------------
# reload shell
#------------------------------
reload () {
		exec "${SHELL}" "$@"
}

